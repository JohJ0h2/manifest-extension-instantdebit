{
    "manifest_version": 2,
    "name": "Débit Instantané",
    "version": "4.0",
    "description": "Mesure du débit de téléchargement instantané.",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icon.png"
        }
    }
}
